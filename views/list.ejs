<%- include("header.ejs") -%>

<div id="heading" class="box">
    <h1><%= title %></h1>
</div>

<div class="box">
    <% newItems.forEach(function(item) { %> 
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
                <p><%= item.name %></p> 
            </div>
        </form>
    <% }) %>

    <form class="item" action="/todo" method="post"> 
        <input type="text" name="newItems" placeholder="New Item" autocomplete="off" required> 
        <button type="submit">+</button>
    </form>
</div>

<%- include("footer.ejs") -%>
